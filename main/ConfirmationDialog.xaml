<Window x:Class="main.ConfirmationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="200" Width="300"
            ResizeMode="NoResize"
            WindowStyle="None">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Certainly delete element?" FontSize="16" HorizontalAlignment="Center" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Yes" Width="80" Click="YesButton_Click" />
                <Button Content="No" Width="80" Click="NoButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>